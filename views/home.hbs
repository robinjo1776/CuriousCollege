{{> header user }}
  <div class="container">
    <div class="row ">
      <div class="col">
        <br>
        <h2><u>Curious College</u></h2>
        <h5>A Place for you to learn more about College.</h5>
        <br>
      </div>
      </div>
      {{#if user}}
      <div class="col-lg-1" style="margin: 0px 35px 10px 10px;">
        <div class="row">
        <button type="button" class="btn btn-primary" >Create Post</button>
        </div>
      </div>
      {{/if}}
      <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12">
        <table class="table" style="margin-left: -15px;">
          <thead>
            <tr>
                <th class="col-6" id="main_titles">Threads</th>
                <th class="col-2" id="main_titles">Date</th>
            </tr>
          </thead>
          <tbody>
            {{#if forumPost}}
            {{#each forumPost}}
            <tr>
              <td id="main_post_titles"><a href="#">{{this.content}}</a></td>
              <td id="main_titles">{{this.date}}</td>
            </tr>
            {{/each}}
            {{/if}}
          </tbody>
        </table>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 ">
            <br>
            <div class="banner banner-sm">
              <h5 id="side-banner-title">Daily Top Threads</h5>
            <ul id="side-banner-content">
              {{#if popularPosts}}
              {{#each popularPosts}}
              <li><a href="#">{{this.content}}</a></li>
              {{/each}}
              {{/if}}
            </ul>  
            </div>
        </div>
      </div>
      </div>
    