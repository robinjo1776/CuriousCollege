{{> header user }}
<div class="container">
  <div class="row">
    <div class="col-12">
      <br>
      <h2><u>Popular Threads</u></h2>
      <br>
    </div>
    </div>
    {{#if user}}
      <div class="col-lg-1" style="margin: 0px 12px 10px 12px;">
        <div class="row">
        <button type="button" class="btn btn-primary" >Create Post</button>
      </div>
      </div>
      {{/if}}
    <div class="row">
      <div class="col-12">
        <table class="table">
        <thead class="thead-dark">
          <tr>
              <th class="col-6" id="main_titles">Top Threads</th>
              <th class="col-3" id="main_titles"># of Replies</th>
          </tr>
        </thead>
        <tbody>
          {{#if threads}}
          {{#each threads}}
          <tr>
            <td id="main_post_titles"><a href="#">{{this.content}}</a></td>
            <td id="main_titles">{{this.replies}}</td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
      </div>
    </div>
</div>